	},
	"license": "MIT",
	"description": "ssr boilerplate",
	"author": "Karl: ollylut@gmail.com",
	"scripts": {
		"dev": "cross-env NODE_ENV=development ts-node src/server",
		"spa": "cross-env NODE_ENV=development webpack serve --config webpack/configs/spa.config.ts",
		"start": "rimraf dist && cross-env NODE_ENV=production run-s prod:*",
		"prod:build": "tsc --project src/server && webpack",
		"prod:start": "node dist/src/server",
		"test": "jest --coverage --coverage-reporters=lcov",
		"postinstall": "husky install",
		"prettier": "prettier --write \"src/**/*.{ts,tsx,html,css,scss}\"",
		"lint": "run-p lint:**",
		"lint:script": "eslint --fix --cache --quiet --ext .ts,.tsx ./",
		"lint:style": "stylelint --fix \"src/**/*.{css,scss}\""
	},

{
    "compilerOptions": {
        "skipLibCheck": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"],
            "server/*": ["src/server/*"],
            "client/*": ["src/client/*"],
            "errors/*": ["src/client/errors/*"],
            "components/*": ["src/client/components/*"],
            "@shared/*": ["src/client/components/@shared/*"],
            "pages/*": ["src/client/pages/*"],
            "utils/*": ["src/client/utils/*"],
            "assets/*": ["src/client/assets/*"],
            "config/*": ["config/*"]
        },
        "typeRoots": ["@types"]
    },
    "exclude": ["node_modules"]
}
